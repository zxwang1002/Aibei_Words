<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_english_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:paddingTop="100dp"
        android:text="Welcome to use AiBei Words"
        android:textColor="#FFF"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:hint="ID"
        android:paddingLeft="10dp"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="20sp"
        android:background="@drawable/bg_username" />


    <EditText
        android:id="@+id/et_2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_1"
        android:layout_alignStart="@+id/et_1"
        android:layout_below="@+id/et_1"
        android:hint="PassWord"
        android:paddingLeft="10dp"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="20sp"
        android:background="@drawable/bg_username"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/et_2"
        android:layout_marginLeft="570dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/icon_button"
        android:text="Log In"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/et_2"
        android:layout_marginLeft="365dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/icon_button"
        android:text="  Register  "
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_chinese_mode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_maintenance_mode"
        android:layout_marginTop="13dp"
        android:background="@drawable/icon_button"
        android:text="  Click to enter Chinese mode  "
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_maintenance_mode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_button"
        android:text="  Click to enter maintenance mode  "
        android:textAllCaps="false"
        android:textSize="20sp" />



</RelativeLayout>